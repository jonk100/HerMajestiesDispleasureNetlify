---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Layout from "@/layout/collections/LocationsLayout.astro";
import { getScenesForLocation } from "@/utils/getScenesForLocation";

/**
 * Static paths for all locations
 */
export async function getStaticPaths() {
  const locations = await getCollection("locations");

  return locations.map((location) => ({
    params: { slug: location.slug },
    props: { location },
  }));
}

const { location }: { location: CollectionEntry<"locations"> } = Astro.props;

// Load all scenes once
const scenes = await getCollection("scenes");

// Find scenes that use this location
const scenesUsed = getScenesForLocation(scenes, location.slug);

const { Content } = await location.render();
---

<Layout title={`${location.data.name} - Locations`}>
  <div class="container">
    <header class="header">
      <h1>{location.data.name}</h1>

      <div class="meta">
        <span class="type">{location.data.type}</span>
        {location.data.mood && <span class="mood">{location.data.mood}</span>}
      </div>
    </header>

    <section class="location-info">
      <p>
        <strong>Description:</strong> {location.data.description}
      </p>

      {location.data.visual_notes && (
        <p>
          <strong>Visual Notes:</strong> {location.data.visual_notes}
        </p>
      )}

      {location.data.practical_notes && (
        <p>
          <strong>Practical Notes:</strong> {location.data.practical_notes}
        </p>
      )}

      {scenesUsed.length > 0 && (
        <div class="scenes-section">
          <strong>Used in Scenes:</strong>

          <ul class="scenes">
            {scenesUsed.map((scene) => (
              <li class="scene">
                <a href={`/scenes/${scene.slug}`}>
                  Scene {scene.data.scene_number}: {scene.data.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}

      {location.data.reference_images.length > 0 && (
        <div class="images-section">
          <strong>Reference Images:</strong>

          <ul class="images">
            {location.data.reference_images.map((image) => (
              <li class="image">{image}</li>
            ))}
          </ul>
        </div>
      )}
    </section>

    <section class="content">
      <Content />
    </section>

    <nav class="back-link">
      <a href="/locations">‚Üê Back to Locations</a>
    </nav>
  </div>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #eee;
  }

  .meta {
    display: flex;
    gap: 1rem;
  }

  .type {
    background: #e8f5e8;
    color: #2e7d32;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.875rem;
    text-transform: capitalize;
  }

  .location-info {
    background: #f9f9f9;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .scenes,
  .images {
    margin-top: 0.5rem;
    padding-left: 1.25rem;
  }

  .scene a {
    text-decoration: none;
    color: #333;
  }

  .scene a:hover {
    text-decoration: underline;
  }

  .content {
    line-height: 1.6;
  }

  .back-link {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
  }

  .back-link a {
    text-decoration: none;
    color: #666;
  }

  .back-link a:hover {
    color: #0066cc;
  }
</style>
