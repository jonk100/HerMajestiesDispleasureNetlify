---
import { getCollection } from "astro:content";
import Layout from "@/layout/collections/ThemesLayout.astro";

export async function getStaticPaths() {
  const themes = await getCollection("themes");
  return themes.map((theme) => ({
    params: { slug: theme.slug },
    props: { theme },
  }));
}

const { theme } = Astro.props;
const { Content } = await theme.render();
---

<Layout title={`${theme.data.name} - Themes`}>
  <div class="container">
    <div class="header">
      <h1>{theme.data.name}</h1>

    </div>
    
    <div class="theme-info">
      <div class="description">
        <strong>Description:</strong> {theme.data.description}
      </div>
      
<div class="exploration">
        <strong>How Explored:</strong> {theme.data.how_explored}
      </div>
      
      {theme.data.character_connections && theme.data.character_connections.length > 0 && (
        <div class="characters">
          <strong>Character Connections:</strong>
          <div class="character-list">
            {theme.data.character_connections.map((character) => (
              <span class="character">{character}</span>
            ))}
          </div>
        </div>
      )}
      
      {theme.data.scene_references && theme.data.scene_references.length > 0 && (
        <div class="scenes">
          <strong>Scene References:</strong>
          <div class="scene-list">
            {theme.data.scene_references.map((scene) => (
              <span class="scene">{scene}</span>
            ))}
          </div>
        </div>
      )}
      
      {theme.data.symbols && theme.data.symbols.length > 0 && (
        <div class="symbols">
          <strong>Symbols:</strong>
          <div class="symbol-list">
            {theme.data.symbols.map((symbol: string) => (
              <span class="symbol">{symbol}</span>
            ))}
          </div>
        </div>
      )}
    </div>
    
    <div class="content">
      <Content />
    </div>
    
    <div class="back-link">
      <a href="/themes">‚Üê Back to Themes</a>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #eee;
  }
  
  .header h1 {
    margin: 0 0 1rem 0;
  }
  
  .meta {
    display: flex;
    gap: 1rem;
  }
  
  .importance, .development {
    background: #f0f0f0;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.875rem;
    text-transform: capitalize;
  }
  
  .importance {
    background: #e8f5e8;
    color: #2e7d32;
  }
  
  .development {
    background: #f3e5f5;
    color: #7b1fa2;
  }
  
  .theme-info {
    background: #f9f9f9;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  
  .description, .manifestation {
    margin: 1rem 0;
    padding: 1rem;
    background: white;
    border-radius: 4px;
    border-left: 4px solid #0066cc;
  }
  
  .tags-section {
    margin-top: 1rem;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }
  
  .tag {
    background: white;
    color: #666;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.75rem;
    border: 1px solid #ddd;
  }
  
  .content {
    line-height: 1.6;
  }
  
  .content h2, .content h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .back-link {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
  }
  
  .back-link a {
    text-decoration: none;
    color: #666;
  }
  
  .back-link a:hover {
    color: #0066cc;
  }
</style>
