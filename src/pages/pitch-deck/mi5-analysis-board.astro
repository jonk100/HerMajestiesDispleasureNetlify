---
import Layout from "../../layout/Layout.astro";
---

<Layout title="MI5 Cultural Threat Analysis Board">
  <div class="pitch-deck-wrapper">
    <div class="board">
    <style>
      .pitch-deck-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: #2a2a2a;
        padding: 20px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .board {
        background: #d4c5a9;
        width: 100%;
        max-width: 1400px;
        padding: 40px;
        position: relative;
        box-shadow: 0 10px 40px rgba(0,0,0,0.5);
        border: 2px solid #8b7355;
      }

      .header {
        text-align: center;
        border: 3px solid #000;
        padding: 15px;
        background: #fff;
        margin-bottom: 30px;
        position: relative;
      }

      .header h1 {
        font-size: 24px;
        letter-spacing: 2px;
        margin-bottom: 5px;
      }

      .header h2 {
        font-size: 14px;
        font-weight: normal;
        color: #666;
        font-style: italic;
      }

      .stamp {
        position: absolute;
        color: #c41e3a;
        font-weight: bold;
        font-size: 18px;
        border: 3px solid #c41e3a;
        padding: 5px 15px;
        transform: rotate(-12deg);
        opacity: 0.8;
      }

      .stamp.confidential {
        top: 10px;
        right: 50px;
      }

      .stamp.unverified {
        bottom: 15px;
        left: 40px;
        transform: rotate(8deg);
      }

      .central-box {
        background: #fff;
        border: 4px solid #000;
        padding: 20px;
        margin: 30px auto;
        max-width: 600px;
        position: relative;
      }

      .central-box h3 {
        font-size: 16px;
        margin-bottom: 15px;
        text-align: center;
        letter-spacing: 1px;
      }

      .central-box .quote {
        font-size: 18px;
        line-height: 1.6;
        margin: 15px 0;
        font-style: italic;
        text-align: center;
      }

      .central-box .source {
        font-size: 12px;
        color: #666;
        text-align: center;
        font-style: italic;
      }

      .note {
        background: #fef9c3;
        border-left: 3px solid #999;
        padding: 10px;
        margin-top: 15px;
        font-size: 11px;
        font-style: italic;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 30px 0;
      }

      .section {
        background: rgba(255,255,255,0.9);
        border: 2px solid #000;
        padding: 20px;
        position: relative;
      }

      .section h4 {
        font-size: 14px;
        margin-bottom: 15px;
        text-decoration: underline;
        letter-spacing: 1px;
      }

      .handwritten {
        font-family: 'Brush Script MT', cursive;
        color: #1a1a1a;
      }

      .arrow {
        margin: 5px 0;
        padding-left: 20px;
        position: relative;
      }

      .arrow::before {
        content: '→';
        position: absolute;
        left: 0;
        font-weight: bold;
      }

      .checklist {
        list-style: none;
        padding: 0;
      }

      .checklist li {
        margin: 8px 0;
        padding-left: 25px;
        position: relative;
      }

      .checklist li::before {
        position: absolute;
        left: 0;
        font-weight: bold;
      }

      .checklist li.no::before {
        content: '❌';
      }

      .loop {
        border: 3px solid #333;
        border-radius: 50%;
        padding: 30px;
        margin: 10px;
        text-align: center;
        background: rgba(200,200,200,0.3);
      }

      .loop .center-text {
        font-weight: bold;
        font-size: 12px;
        margin-top: 10px;
        text-decoration: underline;
        text-decoration-style: double;
      }

      .post-it {
        background: #fef08a;
        padding: 10px;
        margin-top: 10px;
        font-size: 11px;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
        transform: rotate(-2deg);
      }

      .ladder {
        list-style: none;
        padding: 0;
      }

      .ladder li {
        padding: 8px;
        margin: 5px 0;
        border-left: 3px solid #333;
        padding-left: 15px;
      }

      .ladder li.typed {
        font-family: 'Courier New', monospace;
      }

      .ladder li.handwritten {
        font-family: 'Brush Script MT', cursive;
        font-weight: bold;
      }

      .ladder li.bold {
        font-weight: bold;
        font-size: 15px;
      }

      .form {
        background: #fff;
        border: 1px solid #000;
        padding: 15px;
        margin: 10px 0;
        font-size: 11px;
      }

      .form-header {
        font-weight: bold;
        margin-bottom: 10px;
        text-decoration: underline;
      }

      .form-field {
        margin: 5px 0;
      }

      .chalkboard {
        background: #1a3a1a;
        color: #fff;
        padding: 20px;
        margin: 30px auto;
        max-width: 500px;
        text-align: center;
        border: 8px solid #8b7355;
        position: relative;
      }

      .chalkboard h3 {
        font-size: 20px;
        margin-bottom: 15px;
        letter-spacing: 2px;
      }

      .chalkboard .main {
        font-size: 24px;
        font-weight: bold;
        margin: 20px 0;
      }

      .chalkboard .response {
        font-size: 16px;
        margin: 10px 0;
      }

      .chalkboard .yet {
        font-size: 18px;
        margin-top: 15px;
        font-style: italic;
      }

      .corner-forms {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 30px 0;
      }

      .royal-box {
        background: #f5f5f5;
        border: 2px solid #000;
        padding: 15px;
      }

      .royal-box h4 {
        font-size: 13px;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .royal-box ul {
        list-style: none;
        padding: 0;
        font-size: 12px;
      }

      .royal-box li {
        margin: 5px 0;
      }

      .margin-note {
        font-size: 10px;
        font-style: italic;
        color: #666;
        margin-top: 10px;
        padding-left: 10px;
        border-left: 2px solid #999;
      }

      .diagram-container {
        text-align: center;
        margin-bottom: 30px;
        padding: 20px;
        background: rgba(255,255,255,0.95);
        border: 2px solid #000;
        position: relative;
      }

      .diagram-container img {
        max-width: 100%;
        height: auto;
        border: 1px solid #333;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
      }

      .diagram-label {
        font-size: 11px;
        font-style: italic;
        color: #666;
        margin-top: 10px;
        text-align: center;
      }

      .pre-board-images {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
      }

      .pre-board-images .image-container {
        background: rgba(255,255,255,0.95);
        border: 2px solid #000;
        padding: 15px;
        text-align: center;
      }

      .pre-board-images img {
        max-width: 100%;
        height: auto;
        border: 1px solid #333;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
      }

      .pre-board-images .image-label {
        font-size: 11px;
        font-style: italic;
        color: #666;
        margin-top: 8px;
        text-align: center;
      }

      .post-board-image {
        margin-top: 30px;
        text-align: center;
        background: rgba(255,255,255,0.95);
        border: 2px solid #000;
        padding: 20px;
      }

      .post-board-image img {
        max-width: 100%;
        height: auto;
        border: 1px solid #333;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
      }

      .post-board-image .image-label {
        font-size: 11px;
        font-style: italic;
        color: #666;
        margin-top: 10px;
        text-align: center;
      }

      @media (max-width: 768px) {
        .grid,
        .corner-forms,
        .pre-board-images {
          grid-template-columns: 1fr;
        }
        
        .board {
          padding: 20px;
        }
      }

    </style>

