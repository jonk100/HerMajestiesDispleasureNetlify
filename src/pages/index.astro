---
import Layout from "@/layout/Layout.astro";
---

<Layout title="Her Majesty's Displeasure - Creative Writing Project">
  <div class="container">
    <h1>Her Majesty's Displeasure</h1>
    <p>A creative writing project exploring the intersection of music, monarchy, and social change in 1960s Britain.</p>
    
    <div class="collections-grid">
      <div class="collection-card">
        <h2><a href="/characters">Characters</a></h2>
        <p>Detailed character profiles and development</p>
      </div>
      
      <div class="collection-card">
        <h2><a href="/scenes">Scenes</a></h2>
        <p>Individual scenes with structure and content</p>
      </div>
      
      <div class="collection-card">
        <h2><a href="/beats">Story Beats</a></h2>
        <p>Key story moments and plot points</p>
      </div>
      
      <div class="collection-card">
        <h2><a href="/locations">Locations</a></h2>
        <p>Settings and places in the story</p>
      </div>
      
      <div class="collection-card">
        <h2><a href="/dialogue">Dialogue</a></h2>
        <p>Key conversations and memorable lines</p>
      </div>
      
      <div class="collection-card">
        <h2><a href="/research">Research</a></h2>
        <p>Background research and historical context</p>
      </div>
      
      <div class="collection-card">
        <h2><a href="/themes">Themes</a></h2>
        <p>Central themes and their exploration</p>
      </div>
      
      <div class="collection-card">
        <h2><a href="/timeline">Timeline</a></h2>
        <p>Chronological events and story progression</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .collection-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1.5rem;
    background: #f9f9f9;
    transition: transform 0.2s ease;
  }
  
  .collection-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .collection-card h2 {
    margin: 0 0 0.5rem 0;
  }
  
  .collection-card a {
    text-decoration: none;
    color: #333;
  }
  
  .collection-card a:hover {
    color: #0066cc;
  }
  
  .collection-card p {
    margin: 0;
    color: #666;
  }
</style>
