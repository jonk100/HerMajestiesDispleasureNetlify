---
import Head from "./Head.astro";
import Footer from "./Footer.astro";
import NavigationHeader from "./NavigationHeader.astro";
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <Head title={title} />
  <body>
    <NavigationHeader />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
